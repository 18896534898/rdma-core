#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.57)
AC_INIT(FULL-PACKAGE-NAME, VERSION, BUG-REPORT-ADDRESS)
AC_CONFIG_SRCDIR(src/srp-dm.c)
AC_CONFIG_AUX_DIR(config)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(srptools, 0.0.3)

# Checks for programs.
AC_PROG_CC

# Checks for libraries.
AC_CHECK_LIB(sysfs, sysfs_open_class, [],
    AC_MSG_ERROR([sysfs_open_class() not found.  srptools requires libsysfs.]))

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h limits.h stdlib.h string.h unistd.h pci/pci.h)

# Checks for typedefs, structures, and compiler characteristics.

# Checks for library functions.
AC_FUNC_MALLOC
AC_CHECK_FUNCS(memset strchr strtoul)
AC_OUTPUT(Makefile srptools.spec)
